<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textHint">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_speech_bubble"
        android:contentDescription="@string/chat_icon_desc"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--sim 1 card view-->
        <android.support.v7.widget.CardView
            android:id="@+id/sim_first"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/sim1"
                    android:src="@drawable/sim2"
                    android:contentDescription="@string/sim1"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--sim 2 card view-->
        <android.support.v7.widget.CardView
            android:id="@+id/sim_second"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/sim2"
                    android:src="@drawable/sim2"
                    android:contentDescription="@string/sim2"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/sim1_desc"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/sim2_desc"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"/>
    </RelativeLayout>